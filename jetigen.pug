doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Umutstroy Jetigen
    link(rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png')
    link(rel='manifest' href='/site.webmanifest')
    meta(name='msapplication-TileColor' content='#da532c')
    meta(name='theme-color' content='#ffffff')

    link(rel="stylesheet", href="https://unpkg.com/swiper/swiper-bundle.min.css")
    link(rel="stylesheet", href="style.css")
    link(rel="stylesheet", href="/icon/css/icon.css")
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Jost:wght@400;500&display=swap' rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.css' rel='stylesheet')
    script(src="https://maps.api.2gis.ru/2.0/loader.js?pkg=full")
    script(type='text/javascript').
    script(type='text/javascript').
      var contacts;
      DG.then(function () {
      contacts = DG.map('contacts', {
      center: [42.849721, 74.588852],
      scrollWheelZoom: false,
      zoom: 20
      });
      var myIcon = L.icon({
      iconUrl: '/img/logo.webp',
      iconSize: [70, 30],
      });
      DG.marker([42.849721, 74.588852],{icon: myIcon}).addTo(contacts).bindPopup('Строительная копания «UMUT» <br> улица Джаманбаева, 33',)}); 

      var map;
      DG.then(function () {
      map = DG.map('map', {
      center: [42.885833, 74.640146],
      scrollWheelZoom: false,
      zoom: 20
      });
      var myIcon = L.icon({
      iconUrl: '/img/jetigen/jetigen-marker.webp',
      iconSize: [70, 70],
      });
      DG.marker([42.88575, 74.63965],{icon: myIcon}).addTo(map).bindLabel('ЖД «Жетиген» <br> Муса-Джалила 132,  пер. Буденого ', {static: true})});   


  body
    include ./partials/header-inside-page
    include ./partials/call-back-popup
    
    .hero.hero--inner-page(style="background-image: url('/img/jetigen/jetigen.webp');")
    
    .container
      .title-wrap
        h2.title Жилой дом «Жетиген»
        a(href="#location" data-scroll).link Показать на карте   
        a(href="/img/jetigen/1 комн. 34,03.webp" data-fancybox="gallery").link Посмотреть планировки
        .gallery
          mixin gallery(img)
            a(href="/img/jetigen/"+img+".webp" data-fancybox="gallery" ).gallery__item
          +gallery('1 комн. 34,35')  
          +gallery('1 комн. 37,11')  
          +gallery('1 комн. 41,85')  
          +gallery('1 комн. 42,50')  
          +gallery('1 комн. 42,82')  
          +gallery('1 комн. 43,73')  
          +gallery('1 комн. 44,37')  
          +gallery('2 комн. 62,14')  
          +gallery('2 комн. 77,78')  
          +gallery('3 комн. 87,48')  
          
        a(href="#documentation" data-scroll).link Документация  
        a(href="/img/jetigen/plan-jetigen.pdf").link План типового этажа    

      .wrap
          mixin item(img,title) 
            .col 
              .img.img--tranlste-off
                img(src="/img/jetigen/jetigen"+img+".webp", alt="") 
              .title!=title 
          +item(1,'8 этажей')
          +item(2,'4 подъезда')
          +item(3,'77 квартир')

      include ./partials/form
 
      .documentation 
        .container
          h2.title Документация
          
          .documentation__type.documentation__type--detail
            .swiper.Swiper4
              .swiper-wrapper
                mixin documentation(name, link)
                  .swiper-slide
                    .documentation__item
                      .documentation__item-name!=name
                      a(href=link download).documentation__item-link Скачать PDF файл
                +documentation('Государственный акт ЖД «Жетиген»','/doc-jetigen/Государственный акт ЖД «Жетиген».PDF')
                +documentation('Градостроительное заключение ЖД «Жетиген»','/doc-jetigen/Градостроительное заключение ЖД «Жетиген».PDF')
                +documentation('Технический паспорт ЖД «Жетиген»','/doc-jetigen/Технический паспорт ЖД «Жетиген».PDF')
              .swiper-button-next
              .swiper-button-prev   

      .map#location
        h2.title Расположение
        #map

      include ./partials/footer


    
    script(src="https://code.jquery.com/jquery-3.6.0.js")  
    script(src="https://unpkg.com/swiper/swiper-bundle.min.js")  
    script(src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js")  
    script(src="/script.js")