    script(type='text/javascript').
    script(type='text/javascript').
      var contacts;
      DG.then(function () {
      contacts = DG.map('contacts', {
      center: [42.849721, 74.588852],
      scrollWheelZoom: false,
      zoom: 20
      });
      var myIcon = L.icon({
      iconUrl: 'img/logo.webp',
      iconSize: [70, 30],
      });
      DG.marker([42.849721, 74.588852],{icon: myIcon}).addTo(contacts).bindPopup('Строительная копания «UMUT» <br> улица Джаманбаева, 33',)}); 

      var map;
      DG.then(function () {
      map = DG.map('map', {
      center: [42.846330, 74.561256],
      scrollWheelZoom: false,
      zoom: 20
      });
      var myIcon = L.icon({
      iconUrl: 'img/muras/muras-marker.webp',
      iconSize: [70, 70],
      });
      DG.marker([42.8464, 74.5610],{icon: myIcon}).addTo(map).bindLabel('ЖД «Мурас» ул. Курчатова 23, <br> «Нижний Джал»', {static: true})});
    

  body
    include ./partials/header-inside-page
    include ./partials/call-back-popup
    
    .hero.hero--inner-page(style="background-image: url('img/muras/muras.webp');")
    
    .container
      .title-wrap
        h2.title Жилой дом «Мурас»
        a(href="#location" data-scroll).link Показать на карте   
        a(href="img/muras/1.25.17.webp" data-fancybox="gallery").link Посмотреть планировки
        .gallery
          mixin gallery(img)
            a(href="img/muras/"+img+".webp" data-fancybox="gallery" ).gallery__item
          +gallery('1.25.17')
          +gallery('1.43.51')
          +gallery('1.44.41')
          +gallery('1.44.95')
          +gallery('1.44.97')
          +gallery('1.45.45')
          +gallery('1.45.85')
          +gallery('2.57.47')
          +gallery('2.66.72')
          +gallery('2.67.62')
          +gallery('2.67.74')
          +gallery('2.67.74-invert')
          +gallery('2.69.43')
          +gallery('2.70.01')
          +gallery('2.73.16')
          +gallery('3.105.79')

        a(href="#documentation" data-scroll).link Документация  
        a(href="img/muras/plan-muras.pdf" target="_blank").link План типового этажа   

      .wrap
          mixin item(img,title) 
            .col 
              .img.img--tranlste-off
                img(src="img/muras/muras"+img+".webp", alt="") 
              .title!=title 
          +item(1,'10 этажей')
          +item(2,'4 подъезда')
          +item(3,'135 квартир')

      include ./partials/form
 
      .documentation#documentation
        .container
          h2.title Документация
          
          .documentation__type.documentation__type--detail
            .swiper.Swiper4
              .swiper-wrapper
                mixin documentation(name, link)
                  .swiper-slide
                    .documentation__item
                      .documentation__item-name!=name
                      a(href=link download).documentation__item-link Скачать PDF файл
                +documentation('Государственный акт ЖД «Мурас»','doc-muras/Государственный акт ЖД Мурас.PDF')
                +documentation('Технический паспорт ЖД «Мурас»','doc-muras/Технический паспорт ЖД Мурас.PDF')
              .swiper-button-next
              .swiper-button-prev   
      .map#location
        h2.title Расположение
        #map

      include ./partials/footer


    
    script(src="https://code.jquery.com/jquery-3.6.0.js")  
