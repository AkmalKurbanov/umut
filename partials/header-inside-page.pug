header.header
  .container
    .header__col-wrap
      .header__col
        .header__logo
          a(href="/")
            img(src="/img/logo.png" alt="logo") 
      .header__col
        ul.nav
          mixin nav(item, mod, anchor)
            li
              a(href="#"+anchor class=mod data-scroll)=item
          +nav('Объекты','objects')
          +nav('Акции')
          +nav('Новости')
          +nav('О нас','about')
          +nav('Контакты','', 'contacts-js')
        .header__phones
          mixin phone(phone)
            a(href="tel:"+phone  class="header__phone")=phone 
          +phone('+996 501 44 22 22')
          +phone('+996 221 44 22 22')
    